{
  "name": "code-quick",
  "displayName": "Code Quick",
  "description": "Generate code straight to your space!",
  "publisher": "uday2902",
  "icon": "assets/logo-black.png",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Snippets",
    "Testing",
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "codequick",
    "codemaker"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-quick",
          "title": "Code Quick",
          "icon": "./assets/code-quick-activitybar.svg"
        }
      ]
    },
    "views": {
      "code-quick": [
        {
          "id": "codequick",
          "name": "Code Quick"
        }
      ]
    },
    "configuration": {
      "properties": {
        "code-quick.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for Code Quick Extension"
        }
      }
    },
    "commands": [
      {
        "command": "code-quick.TransformEntireFile",
        "title": "Transform Entire File"
      },
      {
        "command": "code-quick.InsertAtCursor",
        "title": "Insert at Cursor"
      },
      {
        "command": "code-quick.AskUserForAPIKey",
        "title": "Add your API Key"
      },
      {
        "command": "code-quick.FixSelectedCode",
        "title": "Selected code"
      },
      {
        "command": "code-quick.FixEntireCode",
        "title": "Entire code"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "code-quick.mainMenu",
          "group": "navigation"
        }
      ],
      "code-quick.mainMenu": [
        {
          "command": "code-quick.InsertAtCursor"
        },
        {
          "command": "code-quick.TransformEntireFile"
        },
        {
          "command": "code-quick.AskUserForAPIKey"
        },
        {
          "submenu": "code-quick.fixMenu",
          "group": "navigation"
        }
      ],
      "code-quick.fixMenu": [
        {
          "command": "code-quick.FixSelectedCode",
          "group": "fixMenu"
        },
        {
          "command": "code-quick.FixEntireCode",
          "group": "fixMenu"
        }
      ]
    },
    "submenus": [
      {
        "id": "code-quick.mainMenu",
        "label": "Code Quick"
      },
      {
        "id": "code-quick.fixMenu",
        "label": "Fix Errors"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}